public class IndexOfFirstEven {
    public static void main(String[] args) {
        int[] arr = {1, 3, 5, 7, 8, 9};
        int index = -1;
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) {
                index = i;
                break;
            }
        }
        if (index != -1) {
            System.out.println("Index of first even number: " + index);
        } else {
            System.out.println("No even number found.");
        }
    }
}
