public class Main {
    public static void main(String[] args) {
        int[] arr = {3, 8, 5, 10, 7};
        int sum = 0, count = 0;

        for (int n : arr) {
            if (n % 2 != 0) {   
                sum += n;
                count++;
            }
        }

        double avg = (double) sum / count;
        System.out.println("Average of odd numbers: " + avg);
    }
}
